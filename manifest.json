{
  "manifest_version": 2,

  "name": "4ye Image Collector",
  "description": "Tiny screenshot tool.",
  "version": "0.0.1",

  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],

      "js": [
        "dist/jquery.js",
        "dist/content.js"
      ]
    }
  ],
  
  "background": {
    "scripts": [
      "dist/main.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png"
    //"default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "*"
  ]
}
