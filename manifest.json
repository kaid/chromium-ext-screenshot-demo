{
    "manifest_version": 2,

    "name": "4ye Image Collector",
    "description": "Tiny screenshot tool.",
    "version": "0.0.1",

    "permissions": ["tabs", "<all_urls>", "activeTab"],
    
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "css": ["content.css"],
            "js": ["jquery.min.js", "content.js"]
        }
    ],
    
    "background": {
        "scripts": ["main.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "icon.png"
    }
}
